{
  "openapi": "3.0.0",
  "info": {
    "title": "Cowala Documentation",
    "description": "This is an Api about conversion currency",
    "version": "1.0.0",
    "contact": {
      "email": "luiz.souz404@gmail.com"
    }
  },
  "paths": {
    "/conversion/create/:currency": {
      "post": {
        "tags": [
          "Conversion"
        ],
        "summary": "Create an conversion",
        "description": "Create an new conversion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "number"
                  },
                  "moedaOriginal": {
                    "type": "string"
                  },
                  "moedaDaConversao": {
                    "type": "string"
                  },
                  "valorEnviado": {
                    "type": "number"
                  },
                  "valorConvertido": {
                    "type": "number"
                  }
                },
                "example": {
                  "id": 1,
                  "valorEnviado": 100
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/conversion/list_conversions": {
      "get": {
        "tags": [
          "Conversion"
        ],
        "summary": "List all conversions",
        "description": "List all conversions",
        "responses": {
          "201": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "moedaOriginal": {
                        "type": "string"
                      },
                      "moedaDaConversao": {
                        "type": "string"
                      },
                      "valorEnviado": {
                        "type": "number"
                      },
                      "valorConvertido": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/conversion/detail_conversions/{conversionID}": {
      "get": {
        "tags": [
          "Conversion"
        ],
        "summary": "Show detail conversion",
        "description": "Show a unique detail conversion",
        "parameters": [
          {
            "name": "conversionID",
            "in": "path",
            "description": "The conversion id need to be provided.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "moedaOriginal": {
                      "type": "string"
                    },
                    "moedaDaConversao": {
                      "type": "string"
                    },
                    "valorEnviado": {
                      "type": "number"
                    },
                    "valorConvertido": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Conversion is not found"
          }
        }
      }
    },
    "/conversion/delete_conversions/{conversionID}": {
      "delete": {
        "tags": [
          "Conversion"
        ],
        "summary": "Delete an product",
        "description": "Delete an product",
        "parameters": [
          {
            "name": "conversionID",
            "in": "path",
            "description": "The Conversion id needs to be provided.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Deleted"
          },
          "404": {
            "description": "Product not found"
          }
        }
      }
    }
  }
}
